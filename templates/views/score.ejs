<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/score.css" media="screen">
    <link rel="shortcut icon" href="images/favicon.ico" type="image/ico">
    <title>Submit Score</title>

</head>
<body>
    <h1 class="main-heading">Enter Your Score</h1>
    <h3 class="score-para" id="scoreDisplay">Your Score: <span id="scoreValue">0</span> out of 23</h3>
    <form action="/score" method="POST">
        <label class="name-label">Name: </label>
        <input class="name-input" type="text" name="name" required>
        <input type="hidden" name="score" id="scoreInput">
        <button type="submit" class="link-class submit-button" style="--clr:#01fe87">Submit</button>
    </form>
    <a class="link-class result-button" style="--clr:#01fe87" href="/result"><span>Check Results</span></a>
    <script>
        // Load score from localStorage
        const score = localStorage.getItem('gameScore') || 0;
        document.getElementById('scoreValue').textContent = score;
        document.getElementById('scoreInput').value = score;
    </script>
</body>
</html>